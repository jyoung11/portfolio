# Ignore Composer vendor directory and Drupal core
docroot/vendor/
docroot/core/

# Ignore paths that contain user-generated content.
docroot/files
docroot/files-private/*
docroot/sites/*/files
docroot/sites/*/files-private/*

# Ignore contrib modules and themes that are Composer-managed
docroot/modules/contrib/
docroot/themes/contrib/

# Ignore local settings and development services
docroot/sites/*/settings.local.php
docroot/sites/development.services.yml


# keep .htaccess rules for files-private directory
!docroot/files-private/.htaccess


# Ignore Mac DS_Store files
*.DS_Store

# Ignore VSCode workspace settings
.vscode

# Ignore node_modules
node_modules

# Ignore Examples Module
docroot/modules/contrib/examples

# Ignore files flagged in Qualys scans
docroot/README.txt
docroot/core/CHANGELOG.txt
docroot/themes/README.txt
docroot/sites/README.txt
docroot/core/themes/stable/README.txt

# but make sure not to exclude vendor resources in the front-end /dist/ directory
# !**/dist/vendor

# Ignore configuration files that may contain sensitive information.
docroot/sites/*/settings*.php
docroot/sites/*/services*.yml

# Ignore paths that contain user-generated content.
sites/*/files
sites/*/files-private/*

# Others
.idea
portfolio-jim.sql
.lando.local.yml
backups/
