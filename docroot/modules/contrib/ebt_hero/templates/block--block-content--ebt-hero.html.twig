{#
/**
 * @file
 * Theme override to display a block.
 *
 * Available variables:
 * - plugin_id: The ID of the block implementation.
 * - label: The configured label of the block if visible.
 * - configuration: A list of the block's configuration values.
 *   - label: The configured label for the block.
 *   - label_display: The display settings for the label.
 *   - provider: The module or other provider that provided this block plugin.
 *   - Block plugin specific settings will also be stored here.
 * - content: The content of this block.
 * - attributes: array of HTML attributes populated by modules, intended to
 *   be added to the main container tag of this template.
 *   - id: A valid HTML ID and guaranteed unique.
 * - title_attributes: Same as attributes, except applied to the main title
 *   tag that appears in the template.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 *
 * @see template_preprocess_block()
 */
#}
{% set classes = [
  'block',
  'ebt-block',
  'ebt-block-' ~ plugin_id|clean_class,
  'ebt-basic-button',
  'ebt-hero',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
  'block-revision-id-' ~ configuration.block_revision_id,
  content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.styles,
  'image-position-' ~ content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.image_position,
] %}

{{ attach_library('ebt_basic_button/ebt_basic_button_view') }}
{{ attach_library('ebt_hero/common') }}
{% if content.field_ebt_settings['#object'].field_ebt_settings.ebt_settings.styles %}
  {{ attach_library('ebt_hero/' ~ content.field_ebt_settings['#object'].field_ebt_settings.ebt_settings.styles) }}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.add_nofollow is not empty and content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.add_nofollow == 1 %}
  {% set nofollow = ' rel="nofollow"' %}
{% else %}
  {% set nofollow = '' %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.open_in_new_tab is not empty and content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.open_in_new_tab == 1 %}
  {% set target = ' target="_blank"' %}
{% else %}
  {% set target = '' %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.alignment %}
  {% set classes = classes|merge(['ebt-align-' ~ content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.alignment]) %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.shape %}
  {% set classes = classes|merge(['ebt-shape-' ~ content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.shape]) %}
{% endif %}


{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.size %}
  {% set classes = classes|merge(['ebt-size-' ~ content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.size]) %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.stetched is not empty and content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.stetched == 1 %}
  {% set classes = classes|merge(['ebt-stretched']) %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.stretched is not empty and content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.stretched == 1 %}
  {% set classes = classes|merge(['ebt-stretched']) %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.custom_class_name is not empty %}
  {% set button_custom_classes = content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.custom_class_name %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.add_nofollow is not empty and content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.add_nofollow == 1 %}
  {% set button2_nofollow = ' rel="nofollow"' %}
{% else %}
  {% set button2_nofollow = '' %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.open_in_new_tab is not empty and content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.open_in_new_tab == 1 %}
  {% set button2_target = ' target="_blank"' %}
{% else %}
  {% set button2_target = '' %}
{% endif %}

{%
  set button2_classes = []
%}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.alignment %}
  {% set button2_classes = button2_classes|merge(['ebt-align-' ~ content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.alignment]) %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.shape %}
  {% set button2_classes = button2_classes|merge(['ebt-shape-' ~ content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.shape]) %}
{% endif %}


{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.size %}
  {% set button2_classes = button2_classes|merge(['ebt-size-' ~ content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.size]) %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.stetched is not empty and content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.stetched == 1 %}
  {% set button2_classes = button2_classes|merge(['ebt-stretched']) %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.stretched is not empty and content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.stretched == 1 %}
  {% set button2_classes = button2_classes|merge(['ebt-stretched']) %}
{% endif %}

{% if content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.custom_class_name is not empty %}
  {% set button2_custom_classes = content.field_ebt_settings['#object'].field_ebt_settings.0.ebt_settings.link_options2.custom_class_name %}
{% endif %}

<div{{ attributes.addClass(classes) }}>
  <div class="bg-inner"></div>
  <div class="ebt-container">
    {{ title_prefix }}
    {% if label %}
      <h2{{ title_attributes }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    <div class="ebt-hero-container">
      <div class="hero-col-1">
        {{ content.field_ebt_hero_column_image }}
      </div>
      <div class="hero-col-2">
        {{ content.field_ebt_hero_title_prefix }}
        {{ content.field_ebt_hero_title }}
        {{ content.body }}
        {% if content.field_ebt_hero_link|render or content.field_ebt_hero_second_link|render %}
        <div class="buttons">
          {% if content.field_ebt_hero_link|render %}
          <div class="cta-button-wrapper">
          <span class="ebt-basic-button-wrapper">
            <a href="{{ content.field_ebt_hero_link.0['#url'] }}" class="ebt-basic-button {{ button_custom_classes }}" {{ nofollow|raw }} {{ target|raw }}>
              {{ content.field_ebt_hero_link.0['#title'] }}
            </a>
          </span>
          </div>
          {% endif %}
          {% if content.field_ebt_hero_second_link|render %}
          <div class="cta-button-wrapper ebt-button2-wrapper {{ button2_classes|join(' ') }}">
          <span class="ebt-basic-button2-wrapper">
            <a href="{{ content.field_ebt_hero_second_link.0['#url'] }}" class="ebt-basic-button2 {{ button2_custom_classes }}" {{ button2_nofollow|raw }} {{ button2_target|raw }}>
              {{ content.field_ebt_hero_second_link.0['#title'] }}
            </a>
          </span>
          </div>
          {% endif %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
{{ styles|raw }}
{{ button_styles|raw }}
{{ hero_styles|raw }}

